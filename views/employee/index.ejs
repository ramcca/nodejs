<!doctype html>
<html lang="en">
  <%- include('./../head'); %>
  <body>
    <div class="container">
      
        <%- include('./../menu') %>

        <div class="p-3 mb-2 bg-secondary text-white">Employee List.</div>

        <hr />
        <% if(message != 0 && message != undefined){ %>
        <div class="alert alert-success" role="alert">
          <%= message %>
        </div>
        <% } %>
        
        <div class="row">
          <div class="col-md-12">
            
            <div class="card" >
              <div class="card-header">
                Add Employee Information
              </div>
              <ul class="list-group list-group-flush">
                <div class="col-md-12">
                <form method="post">
                  <fieldset >
                    <div class="mb-3">
                      <label for="name" class="form-label">Name</label>
                      <input type="text" id="name" class="form-control" placeholder="Employee Name" name="name" required tabindex="0">
                    </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                  </fieldset>
                </form>
              </div>
              </ul>
            </div>

          </div>
        </div>
        <hr />
        <table class="table">
          <thead class="table-dark">
            <tr>
              <th scope="col">#</th>
              <th scope="col">Name</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(i=0;i<employeeData.length;i++){ %>
              <tr>
                <th scope="col"><%=i+1 %></th>
                <th scope="col"><%=employeeData[i].name %></th>
                <th scope="col">Detail</th>
              </tr>
              <% } %>
           
          </tbody>
        </table>
        
    </div>
    <%- include('./../scripts') %>
  </body>
</html>